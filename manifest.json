{
  "manifest_version": 2,
  "name": "Lightbeam",
  "version": "2.0.0",

  "description": "Lightbeam is a Firefox browser extension that uses interactive visualizations to show you the relationships between third parties and the sites you visit.",
  "homepage_url": "https://github.com/mozilla/lightbeam-we",

  "icons": {
    "48": "images/lightbeam-48.png",
    "96": "images/lightbeam-96.png"
  },

  "permissions": [
    "webRequest",
    "<all_urls>",
    "tabs",
    "storage",
    "downloads",
    "privacy"
  ],

  "browser_action": {
    "default_icon": "images/lightbeam-48.png",
    "default_title": "Lightbeam"
  },

  "applications": {
    "gecko": {
      "id": "jid1-F9UJ2thwoAm5gQ@jetpack",
      "strict_min_version": "52"
    }
  },

  "background": {
    "scripts": [
      "ext-libs/dexie.js",
      "js/store.js",
      "js/capture.js",
      "js/background.js"
    ]
  }
}
